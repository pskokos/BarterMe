<%= stylesheet_link_tag "welcome" %>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="row" style="padding-top:10px;">
      <div class="jumbotron" style="padding-top:10px; padding-left:10px; padding-right:10px;">
  <div class="container-fluid">
      <div class="col-md-4" style="padding-left:10px; padding-right:10px; text-shadow: 2px 2px black; ">
       <h2> TOP 5 LISTINGS</h2>
       <p><font size="5">
        <% @top_categories[0,5].each do |k, v| %>
        <%= link_to k, items_path(:query => k) %>
        <%= "(" + "#{v}" + ")" %><br>
        <% end %>
        <br> <%= link_to "All Categories", listings_path %>
      </font></p>
    </div>
    <div class="col-md-4" style="padding-left:10px; padding-right:10px; border-left: 1px solid #ccc; text-shadow: 2px 2px black;">
     <h2> BARTER OF THE DAY</h2>
   </div>
   <div class="col-md-4" style="padding-left:10px; padding-right:10px; border-left: 1px solid #ccc; text-shadow: 2px 2px black;">
     <h2> RECOMMENDED BARTERS </h2>
     <p style="color:red"><font size="5">
      <% if  @current_user != nil && @current_user.looking_for.size > 1 %>
      <% @recommendations.each do |item| %>
      <%= link_to item.name, "/items/#{item.id}" %> <br>
      <% end %>
      <% end %>
      <%= link_to "Feeling Lucky?", "/items/#{(rand(Item.first.id.. Item.last.id))}" %>
    </div>
  </div>
</div>
</div>
</div>

